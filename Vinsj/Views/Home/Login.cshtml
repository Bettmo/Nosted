
@section CustomStyles {
    <link rel="stylesheet" href="~/css/Login.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
}

<div id="loginBG">
    <div id="loginInnhold">
        <img src="~/logo_nosted_bg_removed_dark.png" alt="Logo"/>
        <div id="loginDiv">
            <p>Logg inn på Nøsted&</p>
            <form id="loginForm">
                <label for="Brukernavn">Brukernavn
                    <input type="text" id="Brukernavn" placeholder="Skriv inn brukernavn"/>
                </label>
                <label for="Passord">Passord
                    <input type="password" id="Passord" placeholder="Skriv inn passord"/>
                </label>
                <input type="submit" id="loginSubmit" value="Logg inn" asp-area="" asp-controller="Home" asp-action="Serviceskjema"/>
            </form>
        </div>
    </div>
</div>
