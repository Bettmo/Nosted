            <ul class="menu-links">
                <li class="nav-link">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bx bx-home-alt icon"></i>
                        <span class="text nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a asp-area="" asp-controller="Home" asp-action="Serviceskjema">
